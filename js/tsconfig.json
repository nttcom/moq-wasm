{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["examples/call/src/*"],
      "@moqt/*": ["lib/moqt/*"]
    },
    "types": ["@types/dom-mediacapture-transform", "@types/react", "@types/react-dom"],
    "lib": ["esnext", "webworker", "dom"]
  },
  "include": [
    "examples/**/*.ts",
    "examples/**/*.tsx",
    "examples/media/publisher/files/decoder.js",
    "lib/**/*.ts",
    "pkg/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
